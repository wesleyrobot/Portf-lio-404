import { useState } from 'react';
import './Projects.css';
import { projects } from '../data/projects';

const Projects = () => {
  const [selectedProject, setSelectedProject] = useState(projects[0]);
  const [imageLoading, setImageLoading] = useState(false);

  const handleProjectClick = (project) => {
    if (project.id !== selectedProject.id) {
      setImageLoading(true);
      setTimeout(() => {
        setSelectedProject(project);
        setImageLoading(false);
      }, 300);
    }
  };

  const getImagePath = (imageName) => {
    try {
      return new URL(`../assets/images/${imageName}`, import.meta.url).href;
    } catch {
      return `https://via.placeholder.com/800x600?text=${selectedProject.title}`;
    }
  };

  return (
    <section id="projects" className="projects section">
      <div className="container">
        <h2 className="section-title">Projetos em Destaque</h2>
        <p className="section-subtitle">
          Alguns dos principais projetos que desenvolvi
        </p>

        <div className="projects-split">
          <div className="project-display">
            <div className={`project-image ${imageLoading ? 'loading' : ''}`}>
              <img
                src={getImagePath(selectedProject.image)}
                alt={selectedProject.title}
                onError={(e) => {
                  e.target.src = `https://via.placeholder.com/800x600?text=${selectedProject.title}`;
                }}
              />
            </div>
          </div>

          <div className="project-list">
            {projects.map((project) => (
              <div
                key={project.id}
                className={`project-item ${selectedProject.id === project.id ? 'active' : ''}`}
                onClick={() => handleProjectClick(project)}
              >
                <div className="project-number">{project.number}</div>
                <div className="project-info">
                  <h3>{project.title}</h3>
                  <span className="project-category">{project.category}</span>
                  <p>{project.description}</p>
                  <div className="project-tech">
                    {project.technologies.map((tech, index) => (
                      <span key={index} className="tech-tag">{tech}</span>
                    ))}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  );
};

export default Projects;
